<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.gaojun.hasee.popbgview.MainActivity">

    <com.gaojun.hasee.popbgview.PopBgView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:triangle_location="top"
        app:round_rect_bg_color="@color/colorAccent"
        app:triangle_side_length="10dp"
        />

    <com.gaojun.hasee.popbgview.PopBgView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:triangle_location="right"
        app:round_rect_bg_color="@color/colorPrimary"
        app:triangle_side_length="5dp"
        />

    <com.gaojun.hasee.popbgview.PopBgView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:round_rect_bg_color="#50808080"
        app:triangle_location="left"
        app:triangle_side_length="15dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <com.gaojun.hasee.popbgview.PopBgView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:round_rect_bg_color="@color/colorPrimaryDark"
            app:triangle_location="bottom"
            app:triangle_side_length="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是你们的大哥"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</LinearLayout>
